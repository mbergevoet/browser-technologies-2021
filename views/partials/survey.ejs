<main>
    <progress id="voortgang" value="0" max="6"> 32% </progress>
    <section>
        <h1>
            <%= courseData.question %>
        </h1>
        <form id="gradeform" action="/subject/<%= courseData.course %>/<%= id %>" method="post">
            <fieldset>
                <label for="teacher">Kies je docent</label>
                <div>
                    <label for="docent">
                        <input type="radio" id="docentOne" name="docent" value="<%= courseData.teacherOne %>">
                        <%= courseData.teacherOne %>
                    </label>
                    <label for="docent">
                        <input type="radio" id="docentTwo" name="docent" value="<%= courseData.teacherTwo %>">
                        <%= courseData.teacherTwo %>
                    </label>
                </div>
                <label for="begin-datum">
                    Begin datum
                </label>
                <input type="date" id="begindatum" name="begindatum" required>
                <label for="eind-datum">
                    Eind datum
                </label>
                <input type="date" id="einddatum" name="einddatum" required>
                <label for="grading">
                    Lesstof
                </label>
                <input title="Alleen cijfers 1 tot 10" type="range" id="gradeInputId1" value="0" min="1" max="10"
                    oninput="gradeOnputId1.value = gradeInputId1.value" name="lesstof" required>
                <output id="gradeOnputId1">-</output>
                <label for="grading">
                    Uitleg
                </label>
                <input title="Alleen cijfers 1 tot 10" type="range" id="gradeInputId2" value="0" min="1" max="10"
                    oninput="gradeOnputId2.value = gradeInputId2.value" name="uitleg" required>
                <output id="gradeOnputId2">-</output>
                <label for="grading">
                    Eigen inzicht
                </label>
                <input title="Alleen cijfers 1 tot 10" type="range" id="gradeInputId3" value="0" min="1" max="10"
                    oninput="gradeOnputId3.value = gradeInputId3.value" name="eigeninzicht" required>
                <output id="gradeOnputId3">-</output>
            </fieldset>
            <input id="submitbtn" type="submit" value="Verstuur"></input>
        </form>
    </section>
</main>